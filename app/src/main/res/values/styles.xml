<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondaryHilight</item>
    </style>

    <!-- Top Toolbar TitleView Text -->
    <style name="AppTitleText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/text_size_apptitle</item>
        <item name="android:textColor">@color/secondaryHilight</item>
    </style>

    <!-- Toolbar SubTitleView Text -->
    <style name="AppSubTitleText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- Splash empty TextView text -->
    <style name="SplashEmptyText" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:fontFamily">@font/ubuntu_italic</item>
        <item name="android:textColor">@color/secondaryHilight</item>
    </style>

    <!-- Splash powered by TextView text -->
    <style name="SplashPoweredByText" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <!-- Article Section Title TextViews -->
    <style name="ArticleSectionText" parent="@style/TextAppearance.AppCompat.Inverse">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Article Date / Time TextViews -->
    <style name="ArticleDateTimeText" parent="@style/TextAppearance.AppCompat.Inverse">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Article Title TextView -->
    <style name="ArticleTitleText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Article TrailText Text -->
    <style name="ArticleTrailText" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <!-- Article Author Text -->
    <style name="ArticleAuthorText" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/ubuntu_italic</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColor">@color/secondaryHilight</item>
    </style>

    <!-- Settings Preferences Text Style -->
    <style name="SettingsFragmentTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondaryHilight</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryLight</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <!-- Dialog Styles -->
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
    </style>
    <!-- Settings Dialog Styles -->
    <style name="DialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/secondaryHilight</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="colorAccent">@color/primaryHilight</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

</resources>
